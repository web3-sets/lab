{
  "name": "@web3-sets/smart-contract-schema",
  "description": "Web3 Set Smart Contract JSON draft 07 schema",
  "version": "0.0.0-beta.0",
  "license": "MIT",
  "author": {
    "name": "Kames Geraghty",
    "url": "https://kames.me"
  },
  "repository": {
    "url": "https://github.com/web3-sets/lab",
    "type": "git"
  },
  "engines": {
    "node": ">=10"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/schema.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "watch": "tsdx watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf .cache",
    "clean:test": "jest --clearCache",
    "docs": "yarn typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs true --namedAnchors true --entryDocument index.md",
    "docs:html": "yarn typedoc --plugin none --out docs",
    "postbuild": "cp src/schema.smartcontract.json dist/schema.smartcontract.json",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "ajv": "^8.6.1",
    "ajv-formats": "^2.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^5.2.1",
    "prettier": "^1.19.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.5.0"
  }
}
